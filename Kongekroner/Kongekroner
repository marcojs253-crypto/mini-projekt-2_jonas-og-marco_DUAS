import cv2
import numpy as np

#############################################################################################################################
#############################################################################################################################

# Open picture
billede = cv2.imread("1.jpg")

# Convert BGR to YCrCb
billede_hsv = cv2.cvtColor(billede, cv2.COLOR_BGR2HSV)

cv2.imshow("Filtered board", billede_hsv)
cv2.waitKey(0)
cv2.destroyAllWindows()